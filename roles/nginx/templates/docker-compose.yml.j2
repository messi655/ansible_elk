version: '2'

services:
  kibana:
    image: {{ docker_registry }}/monitoring/kibana
    container_name: kibana
    volumes:
     - "/opt/kibana/config/kibana.yml:/etc/kibana/kibana.yml"
  nginx:
    image: {{ docker_registry }}/monitoring/nginx
    container_name: nginx
    volumes:
     - "/opt/nginx:/etc/nginx"
    ports:
     - "8899:8899"
    links:
     - kibana